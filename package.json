{
  "type": "module",
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19.1.7",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.40.0"
  },
  "scripts": {
    "prepare": "husky",
    "lint-staged": "lint-staged",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit --project frontend/tsconfig.json",
    "deadcode": "cd frontend && npm run deadcode",
    "deadcode:strict": "cd frontend && npm run deadcode:strict",
    "deadcode:summary": "cd frontend && npm run deadcode:summary",
    "api:validate": "python -m compileall -f api || (echo \"‚ùå Python compilation failed\" && exit 1)",
    "build": "npm run typecheck && npm run api:validate"
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "api/**/*.py": [
      "python -m py_compile"
    ]
  }
}
