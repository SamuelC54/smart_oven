[Unit]
Description=Oven UI Kiosk
After=graphical.target network-online.target

[Service]
User=github
# If youâ€™re on X11 set DISPLAY, on Wayland XDG_RUNTIME_DIR is typically enough.
Environment=DISPLAY=:0
Environment=XDG_RUNTIME_DIR=/run/user/1001
# On some images chromium is /usr/bin/chromium instead of chromium-browser
ExecStart=/usr/bin/chromium-browser \
  --noerrdialogs --kiosk --incognito --start-fullscreen \
  --disable-restore-session-state --disable-infobars \
  http://localhost:3000
Restart=always
RestartSec=3

[Install]
WantedBy=graphical.target
